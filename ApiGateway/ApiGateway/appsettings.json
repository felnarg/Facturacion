{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/catalog/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/catalog"
          },
          {
            "PathPrefix": "/api"
          }
        ]
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**remainder}"
        }
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/inventory/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/inventory"
          },
          {
            "PathPrefix": "/api"
          }
        ]
      },
      "purchases-route": {
        "ClusterId": "purchases-cluster",
        "Match": {
          "Path": "/api/purchases/{**remainder}"
        }
      },
      "suppliers-route": {
        "ClusterId": "purchases-cluster",
        "Match": {
          "Path": "/api/suppliers/{**remainder}"
        }
      },
      "sales-route": {
        "ClusterId": "sales-cluster",
        "Match": {
          "Path": "/api/sales/{**remainder}"
        }
      },
      "customers-credit-approval-route": {
        "Order": 0,
        "ClusterId": "customers-cluster",
        "Match": {
          "Path": "/api/customers/{id}/credit-approval"
        }
      },
      "customers-route": {
        "Order": 1,
        "ClusterId": "customers-cluster",
        "Match": {
          "Path": "/api/customers/{**remainder}"
        }
      },
      "kardex-route": {
        "ClusterId": "kardex-cluster",
        "Match": {
          "Path": "/api/kardex/{**remainder}"
        }
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/{**remainder}"
        }
      },
      "roles-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/roles/{**remainder}"
        }
      },
      "permissions-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/permissions/{**remainder}"
        }
      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalogo-api"
          }
        }
      },
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://usuarios-api"
          }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://inventario-api"
          }
        }
      },
      "purchases-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://compras-api"
          }
        }
      },
      "sales-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://ventas-api"
          }
        }
      },
      "customers-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://clientes-api"
          }
        }
      },
      "kardex-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://kardex-api"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://usuarios-api"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}